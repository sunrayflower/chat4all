# Configurações de Ambiente - Chat4All v2
# Copie este arquivo para .env.local para desenvolvimento local

# ============================================================================
# DATABASE - MongoDB
# ============================================================================
MONGO_URI=mongodb://admin:password@localhost:27017/chat4all?authSource=admin
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=chat4all

# ============================================================================
# MESSAGE BROKER - Kafka
# ============================================================================
KAFKA_BROKERS=localhost:9092,kafka:29092
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_NUM_PARTITIONS=10
KAFKA_REPLICATION_FACTOR=3
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_LOG_RETENTION_HOURS=168

# ============================================================================
# gRPC SERVER
# ============================================================================
GRPC_HOST=0.0.0.0
GRPC_PORT=50051
GRPC_MAX_CONCURRENT_STREAMS=100
GRPC_KEEPALIVE_TIME_MS=30000
GRPC_KEEPALIVE_TIMEOUT_MS=10000

# ============================================================================
# WEBSOCKET SERVER
# ============================================================================
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-key-change-in-production-12345-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=1
JWT_REFRESH_EXPIRY_DAYS=7

# ============================================================================
# CACHE - Redis
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
PROMETHEUS_PORT=8000
PROMETHEUS_METRICS_PATH=/metrics

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
DEBUG=True
ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# S3 / OBJECT STORAGE
# ============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=chat4all
S3_REGION=us-east-1

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE_MB=2000
ENABLE_MESSAGE_SEARCH=true
ENABLE_MESSAGE_ENCRYPTION=false
MESSAGE_RETENTION_DAYS=30
